<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AllArchitectureActivity" >

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnMVCArchitecture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="@string/mvc_architecture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnMVPArchitecture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="@string/mvp_architecture"
        app:layout_constraintTop_toBottomOf="@+id/btnMVCArchitecture" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnMVVMArchitecture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="@string/mvvm_architecture"
        app:layout_constraintTop_toBottomOf="@+id/btnMVPArchitecture" />

</androidx.constraintlayout.widget.ConstraintLayout>